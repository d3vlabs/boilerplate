

<div class="container-fluid">
  {{#if messages.success}}
    <div role="alert" class="alert alert-success">
      {{#each messages.success}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
  {{#if messages.error}}
    <div role="alert" class="alert alert-danger">
      {{#each messages.error}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
  {{#if messages.info}}
    <div role="alert" class="alert alert-info">
      {{#each messages.info}}
        <div>{{msg}}</div>
      {{/each}}
    </div>
  {{/if}}
<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
      {{ successMsg}}
    </div>
  </div>
</div>

  <div class="row">
    {{# each products }}
      <div class="row">
        {{# each this }}
          <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
              <img src="{{ this.imagePath }}" alt="..." class="img-responsive qtr">
                <div class="caption">
                  <h3>{{ this.title }}</h3>
                    <p class="description">{{ this.description }}</p>
                    <div class="clearfix">
                      <div class="price pull-left"><strike>£{{ this.prevprice }}</strike></div>
                      <div class="price pull-left"> £{{ this.price }}</div>
                      <a href="/shoppingcart/{{this._id}}" class="btn btn-success pull-right" role="button">Buy</a>
                    </div>
                </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>
